<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/bg2"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/hitokoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hitokoto_id"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:text="数据来自：一言API"
        android:textColor="#000"
        android:textSize="10sp" />
    <TextView
        android:id="@+id/hitokoto_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:textSize="20sp"
        android:padding="10dp"
        android:text="ID:1043"
        />
    <TextView
        android:layout_below="@id/hitokoto_id"
        android:id="@+id/hitokoto_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="身为冒险者，如果安静的老死在床上，那简直就是耻辱！"
        />

    <TextView
        android:id="@+id/hitokoto_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hitokoto_text"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="TO:恶魔法则"
        android:textColor="#000" />

    <TextView
        android:id="@+id/hitokoto_Creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hitokoto_from"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textSize="15sp"
        android:text="Creator:942903628"
        android:textColor="#000" />

</RelativeLayout>